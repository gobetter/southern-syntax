{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2023", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,
    "noImplicitOverride": true,
    "skipLibCheck": true, // ← เปิดไว้เพื่อตัด error จาก node_modules
    "baseUrl": ".",
    "paths": {
      "@southern-syntax/*": ["packages/*/src/index.ts", "packages/*/src"]
    }
  }
}

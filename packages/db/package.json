{
  "name": "@southern-syntax/db",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    },
    "./*": {
      "types": "./dist/*.d.ts",
      "import": "./dist/*.js",
      "default": "./dist/*.js"
    }
  },
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "prisma"
  ],
  "scripts": {
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "lint": "eslint 'src/**/*.{ts,tsx}' --max-warnings=0",
    "typecheck": "tsc -b --pretty false",
    "build": "tsc -b",
    "check-types": "pnpm typecheck",
    "postinstall": "pnpm --filter @southern-syntax/db exec prisma --version >/dev/null 2>&1 && pnpm --filter @southern-syntax/db db:generate || echo \"[skip] prisma generate\""
  },
  "dependencies": {
    "@prisma/client": "^5.22.0",
    "server-only": "^0.0.1"
  },
  "devDependencies": {
    "@southern-syntax/tsconfig": "workspace:*",
    "@types/node": "^24.2.1",
    "prisma": "^5.22.0",
    "typescript": "^5.8.3"
  }
}

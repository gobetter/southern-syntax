{
  "name": "@southern-syntax/db",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "sideEffects": false,
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    }
  },
  "types": "dist/index.d.ts",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "files": [
    "dist",
    "prisma"
  ],
  "prisma": {
    "schema": "prisma/schema.prisma"
  },
  "scripts": {
    "clean": "rimraf dist",
    "build": "tsc -b",
    "typecheck": "tsc -b --pretty false",
    "lint": "eslint . --max-warnings=0",
    "db:generate": "prisma generate --schema prisma/schema.prisma",
    "db:push": "prisma db push --schema prisma/schema.prisma",
    "prepack": "pnpm db:generate && pnpm build",
    "check-types": "pnpm typecheck"
  },
  "peerDependencies": {
    "@prisma/client": "^5.22.0"
  },
  "dependencies": {
    "server-only": "^0.0.1"
  },
  "devDependencies": {
    "@southern-syntax/tsconfig": "workspace:*",
    "prisma": "^5.22.0",
    "typescript": "^5.8.3"
  }
}

{
  "extends": "@southern-syntax/tsconfig/base.json",
  "compilerOptions": {
    "composite": true,
    "rootDir": "src",
    "outDir": "dist",
    "emitDeclarationOnly": true,
    "declaration": true,
    "declarationMap": true,

    "module": "ESNext",
    "moduleResolution": "Bundler",
    "types": ["node"],
    "downlevelIteration": true,
    "verbatimModuleSyntax": true

    /* สำคัญ: ไม่ต้อง override target/lib ที่นี่
       จะไปใช้ค่าใน base.json ที่เป็น ES2022/ES2023 แทน */
  },
  "include": ["src"],
  "exclude": ["node_modules", "__tests__", "dist"]
}

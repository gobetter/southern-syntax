{
  "extends": "@southern-syntax/tsconfig/react-library.json",
  "compilerOptions": {
    "composite": true,
    "rootDir": "src",
    "outDir": "dist",
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": false, // ต้องเป็น false เพื่อมี .js ใน dist
    "exactOptionalPropertyTypes": false, // ผ่อนกฎเพื่อให้เทมเพลตของ shadcn คอมไพล์ผ่านโดยไม่ต้องแก้โค้ด
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "verbatimModuleSyntax": true,
    "jsx": "react-jsx"
  },
  "include": ["src"],
  "exclude": ["dist", "node_modules"]
}

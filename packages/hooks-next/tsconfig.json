{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "composite": true,
    "incremental": true,
    "rootDir": "src",
    "outDir": "dist",
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": false, // ต้องเป็น false เพื่อมี .js ใน dist
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "verbatimModuleSyntax": true,
    "jsx": "react-jsx"
  },
  "include": ["src"],
  "references": [{ "path": "../types" }, { "path": "../utils" }]
}

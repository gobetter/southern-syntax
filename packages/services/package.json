{
  "name": "@southern-syntax/services",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "sideEffects": false,
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    },
    "./*": {
      "types": "./dist/*.d.ts",
      "import": "./dist/*.js",
      "default": "./dist/*.js"
    },
    "./language": {
      "types": "./dist/language.d.ts",
      "import": "./dist/language.js",
      "default": "./dist/language.js"
    }
  },
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc -b",
    "typecheck": "tsc -b --pretty false",
    "lint": "eslint . --max-warnings=0",
    "clean": "rimraf dist",
    "check-types": "pnpm typecheck"
  },
  "dependencies": {
    "@southern-syntax/db": "workspace:*",
    "@southern-syntax/schemas": "workspace:*"
  },
  "devDependencies": {
    "@southern-syntax/tsconfig": "workspace:*",
    "typescript": "^5.8.3",
    "vitest": "^1.6.1",
    "vitest-mock-extended": "^3.1.0"
  },
  "engines": {
    "node": ">=18"
  }
}

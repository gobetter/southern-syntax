{
  "name": "@southern-syntax/i18n",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "sideEffects": false,
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./src/index.ts"
    },
    "./request": {
      "types": "./dist/request.d.ts",
      "default": "./src/request.ts"
    },
    "./utils": {
      "types": "./dist/utils.d.ts",
      "default": "./src/utils.ts"
    },
    "./messages/en": {
      "types": "./dist/messages/en.d.ts",
      "default": "./src/messages/en.ts"
    },
    "./messages/th": {
      "types": "./dist/messages/th.d.ts",
      "default": "./src/messages/th.ts"
    }
  },
  "types": "dist/index.d.ts",
  "files": [
    "src",
    "dist"
  ],
  "scripts": {
    "build": "tsc -b",
    "typecheck": "tsc -b --pretty false",
    "lint": "eslint . --max-warnings=0",
    "check-types": "pnpm typecheck"
  },
  "dependencies": {
    "@southern-syntax/config": "workspace:*",
    "@southern-syntax/types": "workspace:*"
  },
  "peerDependencies": {
    "next-intl": ">=4"
  },
  "devDependencies": {
    "@southern-syntax/tsconfig": "workspace:*",
    "@types/node": "^24.2.1",
    "typescript": "^5.8.3"
  }
}

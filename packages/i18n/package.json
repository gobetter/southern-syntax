{
  "name": "@southern-syntax/i18n",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "sideEffects": false,
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.js",
      "default": "./dist/index.js"
    },
    "./request": {
      "types": "./dist/request.d.ts",
      "import": "./dist/request.js",
      "require": "./dist/request.js",
      "default": "./dist/request.js"
    },
    "./utils": {
      "types": "./dist/utils.d.ts",
      "import": "./dist/utils.js",
      "require": "./dist/utils.js",
      "default": "./dist/utils.js"
    },
    "./messages/en": {
      "types": "./dist/messages/en.d.ts",
      "import": "./dist/messages/en.js",
      "require": "./dist/messages/en.js",
      "default": "./dist/messages/en.js"
    },
    "./messages/th": {
      "types": "./dist/messages/th.d.ts",
      "import": "./dist/messages/th.js",
      "require": "./dist/messages/th.js",
      "default": "./dist/messages/th.js"
    },
    "./all-messages": {
      "types": "./dist/all-messages.d.ts",
      "import": "./dist/all-messages.js",
      "require": "./dist/all-messages.js",
      "default": "./dist/all-messages.js"
    }
  },
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc -p tsconfig.build.json && node ./scripts/copy-json.mjs",
    "typecheck": "tsc -b --pretty false",
    "lint": "eslint 'src/**/*.{ts,tsx}' --max-warnings=0",
    "check-types": "pnpm typecheck"
  },
  "dependencies": {
    "@southern-syntax/config": "workspace:*",
    "@southern-syntax/types": "workspace:*"
  },
  "peerDependencies": {
    "next-intl": ">=4"
  },
  "devDependencies": {
    "@southern-syntax/tsconfig": "workspace:*",
    "typescript": "^5.8.3"
  }
}

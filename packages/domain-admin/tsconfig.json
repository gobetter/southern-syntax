{
  "extends": "@southern-syntax/tsconfig/base.json",
  "compilerOptions": {
    "composite": true,
    "incremental": true,
    "tsBuildInfoFile": "dist/.tsbuildinfo",
    "rootDir": "src",
    "outDir": "dist",
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": false,
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "verbatimModuleSyntax": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"],
  "references": [
    { "path": "../auth" },
    { "path": "../config" },
    { "path": "../constants" },
    { "path": "../db" },
    { "path": "../schemas" },
    { "path": "../types" },
    { "path": "../utils" },
    { "path": "../utils-server" }
  ]
}

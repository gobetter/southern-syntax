{
  "name": "@southern-syntax/hooks",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "sideEffects": false,
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    },
    "./use-debounce": {
      "types": "./dist/use-debounce.d.ts",
      "import": "./dist/use-debounce.js",
      "default": "./dist/use-debounce.js"
    },
    "./use-debounced-callback": {
      "types": "./dist/use-debounced-callback.d.ts",
      "import": "./dist/use-debounced-callback.js",
      "default": "./dist/use-debounced-callback.js"
    }
  },
  "types": "dist/index.d.ts",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "files": [
    "dist"
  ],
  "scripts": {
    "clean": "rimraf dist",
    "build": "pnpm clean && tsc -b",
    "typecheck": "tsc -b --pretty false",
    "lint": "eslint . --max-warnings=0",
    "prepack": "pnpm build",
    "check-types": "pnpm typecheck"
  },
  "peerDependencies": {
    "react": ">=18"
  },
  "devDependencies": {
    "@southern-syntax/tsconfig": "workspace:*",
    "@types/react": "^19.0.0",
    "typescript": "^5.8.3"
  }
}

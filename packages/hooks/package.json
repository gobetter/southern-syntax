{
  "name": "@southern-syntax/hooks",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "sideEffects": false,
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    },
    "./*": {
      "types": "./dist/*.d.ts",
      "import": "./dist/*.js",
      "default": "./dist/*.js"
    },
    "./useDebounce": {
      "types": "./dist/useDebounce.d.ts",
      "import": "./dist/useDebounce.js",
      "default": "./dist/useDebounce.js"
    },
    "./useToast": {
      "types": "./dist/useToast.d.ts",
      "import": "./dist/useToast.js",
      "default": "./dist/useToast.js"
    },
    "./useUpdateQuery": {
      "types": "./dist/useUpdateQuery.d.ts",
      "import": "./dist/useUpdateQuery.js",
      "default": "./dist/useUpdateQuery.js"
    }
  },
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc -b",
    "typecheck": "tsc -b --pretty false",
    "lint": "eslint . --max-warnings 0"
  },
  "peerDependencies": {
    "react": ">=18",
    "next": ">=13",
    "next-intl": ">=4",
    "sonner": ">=2"
  },
  "peerDependenciesMeta": {
    "next": {
      "optional": true
    },
    "next-intl": {
      "optional": true
    },
    "sonner": {
      "optional": true
    }
  },
  "devDependencies": {
    "@southern-syntax/tsconfig": "workspace:*",
    "@types/react": "19.1.0",
    "typescript": "^5.8.3",
    "next": "15.3.3",
    "next-intl": "^4.1.0",
    "sonner": "^2.0.7"
  }
}

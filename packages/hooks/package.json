{
  "name": "@southern-syntax/hooks",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "sideEffects": false,
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./src/index.ts"
    },
    "./useDebounce": {
      "types": "./dist/useDebounce.d.ts",
      "default": "./src/useDebounce.ts"
    },
    "./useToast": {
      "types": "./dist/useToast.d.ts",
      "default": "./src/useToast.ts"
    },
    "./useUpdateQuery": {
      "types": "./dist/useUpdateQuery.d.ts",
      "default": "./src/useUpdateQuery.ts"
    }
  },
  "types": "dist/index.d.ts",
  "files": [
    "src",
    "dist"
  ],
  "scripts": {
    "build": "tsc -b",
    "typecheck": "tsc -b --pretty false",
    "lint": "eslint . --max-warnings 0"
  },
  "peerDependencies": {
    "react": ">=18",
    "next": ">=13",
    "next-intl": ">=4",
    "sonner": ">=2"
  },
  "devDependencies": {
    "@southern-syntax/tsconfig": "workspace:*",
    "@types/react": "19.1.0",
    "typescript": "^5.8.3"
  }
}

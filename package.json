{
  "name": "southern-syntax",
  "private": true,
  "scripts": {
    "db:generate": "pnpm --filter @southern-syntax/db db:generate",
    "postinstall": "pnpm db:generate",
    "build": "pnpm db:generate && turbo run build",
    "dev": "pnpm db:generate && turbo run dev",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types"
  },
  "devDependencies": {
    "prettier": "^3.6.2",
    "turbo": "^2.5.5",
    "typescript": "5.8.3"
  },
  "packageManager": "pnpm@9.0.0",
  "engines": {
    "node": ">=18"
  }
}
